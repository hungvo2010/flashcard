<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.10.1/css/all.css">
    <link rel="stylesheet" href="style/note.css">
    <!-- <link rel="stylesheet" href="style/style.css"> -->
    <link rel="shortcut icon" href="/image/flashcard.png" />
    

    <script src="https://kit.fontawesome.com/434fcc678c.js" crossorigin="anonymous"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>

    <title> Note App </title>
</head>

<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light py-4">
            <div class="container">
                <a class="navbar navbar-light bg-light">
                    <a class="navbar-brand" href="#" style="font-size:45px ;">
                        Note <span>App</span>
                    </a>
                </a>

                <button class="navbar-toggler navbar-dark" type="button" data-bs-toggle="collapse"
                    data-bs-target="#navbarHeader" aria-controls="navbarHeader" aria-expanded="false"
                    aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarHeader">
                    <ul class="navbar-nav ms-auto">

                        <li class="nav-item ms-auto">
                            <a class="nav-link" href="./homepage.html" style="color: white;">Homepage</a>
                        </li>
                        <li class="nav-item ms-auto">
                            <a class="nav-link" href="./user_page.html" style="color: white;">User</a>
                        </li>

                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <main class="container-fluid">
        <section class="row flex-nowrap">

            <section class="col d-flex flex-column min-vh-100 py-3 ">

                <section>

                    <div class="container row pt-4 mx-2 ">
                        <div class="col-lg-4 col-mb-6 col-sm-12 ">
                            <p id="listManager">Danh sách các ghi chú</p>
                        </div>
                        <div class="col-lg-6 col-mb-8 col-sm-12 ">
                            <form class="d-flex border border-3 rounded-pill ps-3 ">
                                <input class="form-control me-0 border-0 " type="search " placeholder="Search "
                                    aria-label="Search ">
                                <button class="btn " type="submit "><i
                                        class="fa-solid fa-magnifying-glass "></i></button>
                            </form>
                        </div>
                    </div>
                </section>
                <hr>
                <section id="add_new_member">
                    <div class="row container pb-3">
                        <div id="all" class="col-2 mx-4">
                            Tất cả (<%= cards.length %>)
                        </div>

                        <div class="col-6">
                            <button id="buttonAdd3" type="button" class="btn rounded-pill" data-bs-toggle="modal"
                                data-bs-target="#myModal">Thêm mới +</button>
                            <div class="modal" id="myModal">
                                <div class="modal-dialog modal-lg">
                                    <div class="modal-content">
                                        <div class="modal-header ">
                                            <h5 id="title_popup " class="modal-title mx-5">Tạo card mới
                                                </h5>
                                            <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                                        </div>
                                        <div class="modal-body">
                                            <form>
                                                <div class="mb-3 ">
                                                    <div class="row g-3 align-items-center my-3 mx-3 ">
                                                        <div class="col-4 ">
                                                            <label for="inputName " class="col-form-label required ">Câu hỏi</label>
                                                        </div>
                                                        <div class="col-auto ">
                                                            <input type="text " id="inputName " class="form-control "
                                                                placeholder="handilao ">
                                                        </div>
                                                    </div>
                                                    <div class="row g-3 align-items-center my-3 mx-3 ">
                                                        <div class="col-4 ">
                                                            <label for="inputPassword "
                                                                class="col-form-label required ">Câu trả lời</label>
                                                        </div>
                                                        <div class="col ">
                                                            <input type="password " id="inputPassword "
                                                                placeholder="@123 " class="form-control ">
                                                        </div>
                                                    </div>
                                                    
                                                <div>
                                            </form>
                                        </div>
                                        <div class="modal-footer ">
                                            <button type="submit " class="btn btn-primary ">Tạo card</button>
                                            <button type="submit " class="btn btn-danger ">Hủy bỏ </button>
                                        </div>
                                    </div>
                                </div>
                            </div>

                        </div>
                    </div>
                </section>


                <section id="main-content" class="container-fluid ">
                    <table id="mainTable" class="table table-striped table-bordered table-hover align-middle ">
                        <thead>
                            <tr>
                                <th scope="col ">STT</th>
                                <th scope="col ">Câu hỏi</th>
                                <th scope="col ">Câu trả lời</th>
                                
                                <!-- <th scope="col ">Thời gian</th> -->
                            </tr>
                        </thead>
                        <tbody>
                            <% for (let idx=0; idx < cards.length; idx++) { %>
                                <tr>
                                    <th scope="row "><%= +idx + 1 %></th>
                                    <td><%= cards[idx].highlight %></td>

                                    <td id="<%=idx%>" onclick="showAnswer('<%= cards[idx].expand %>', '<%=idx%>')"></td>
                                    
                                </tr>
                                <% } %>
                        </tbody>
                    </table>
                </section>



            </section>
        </section>

    </main>







    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js "
        integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p "
        crossorigin="anonymous "></script>

    <script>
        function showAnswer(a, b){
            if($("#"+b).text()) 
                $("#"+b).text("")
            else $("#"+b).text(a)
             
        }
    </script>
</body>

</html>