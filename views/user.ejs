<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.10.1/css/all.css">
    <link rel="stylesheet" href="style/note.css">
    
    <link rel="shortcut icon" href="/image/flashcard.png" />
    <script src="https://kit.fontawesome.com/434fcc678c.js" crossorigin="anonymous"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>

    <title> Tài khoản </title>
</head>

<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light py-4">
            <div class="container">
                <a class="navbar navbar-light bg-light">
                    <a class="navbar-brand" href="/" style="font-size:45px ;">
                        Note <span>App</span>
                    </a>
                </a>

                <button class="navbar-toggler navbar-dark" type="button" data-bs-toggle="collapse"
                    data-bs-target="#navbarHeader" aria-controls="navbarHeader" aria-expanded="false"
                    aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarHeader">
                    <ul class="navbar-nav ms-auto">

                        <li class="nav-item ms-auto">
                            <a class="nav-link" href="/cards" style="color: white;">List Cards</a>
                        </li>
                        <!-- <li class="nav-item ms-auto">
                            <a class="nav-link" href="./list_note.html" style="color: white;">List Node</a>
                        </li> -->

                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <main class="container">
        <section class="row mt-5">
            <div class="col-lg-4 col-mb-6 col-sm-12">
                <img src="./image/avatar.png" alt="avatar">

            </div>
            <div class="col-lg-8 col-mb-6 col-sm-12 border border-primary border-1 rounded-3 ">
                <div class="mb-3 row mt-4">
                    <label for="user" class="col-sm-2 col-form-label">Tên người dùng</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" id="staticEmail" value="<%= user.fullname %>">
                    </div>
                </div>
                <div class="mb-3 row">
                    <label for="staticEmail" class="col-sm-2 col-form-label">Email</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" id="staticEmail" value="<%= user.email %>">
                    </div>
                </div>
                <!-- <div class="mb-3 row">
                    <label for="inputPassword" class="col-sm-2 col-form-label">Password</label>
                    <div class="col-sm-10">
                      <input type="password" class="form-control" id="inputPassword">
                    </div>
                </div>    -->
                <div class="text-end">
                    <button type="button" class="btn btn-outline-primary">Cập nhật</button>
                </div>
            </div>



        </section>

        <section class="container mt-5 pt-5">
            <p style="font-size: 25px;">
                Danh sách các bảng:
            </p>
            <section id="main-content" class="table_responsive">
                <table id="mainTable" class="table table-striped table-bordered table-hover align-middle">
                    <thead>
                        <tr>
                            <th scope="col ">STT</th>
                            <th scope="col ">Tên bảng</th>
                            <th scope="col ">Số lượng thẻ</th>
                            <th scope="col ">...</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% for (let idx in tables) {%>
                            <tr>
                                <th scope="row ">
                                    <%= +idx + 1 %>
                                </th>
                                <td>
                                    <%= tables[idx].name %>
                                </td>
                                <td>
                                    <%= tables[idx].size %>
                                </td>
                                <td><a href="#" onclick="readMore()">Chi tiết</a></td>
                            </tr>
                        <% } %>
                    </tbody>
                </table>
                <form action="/table/create" method="post">
                    <input type="text" class="form-control" name="table" placeholder="Nhập tên bảng mới">
                    <button type="submit" class="btn btn-primary">Tạo bảng</button>
                </form>
                <% if (error) {%>
                    <div id="cnumber" class="emsg">Đăng ký thất bại</div>
                <% } %>
            </section>

        </section>

        <div class="modal" id="myModalReadMore">
            <div class="modal-dialog modal-lg">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 id="title_popup" class="modal-title mx-5">Danh sách các card trong bảng
                        </h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                    </div>
                    <div class="modal-body">
                        <section id="main-content" class="container-fluid ">
                            <table id="mainTable" class="table table-striped table-bordered table-hover align-middle ">
                                <thead>
                                    <tr>
                                        <th scope="col ">STT</th>
                                        <th scope="col ">Câu hỏi</th>
                                        <th scope="col ">Câu trả lời</th>
                                        
                                        <!-- <th scope="col ">Thời gian</th> -->
                                    </tr>
                                </thead>
                                <tbody>
                                   
                                        <tr>
                                            <th scope="row ">1</th>
                                            <td>1</td>
        
                                            <td >1</td>
                                            
                                        </tr>

                                        <tr>
                                            <th scope="row ">2</th>
                                            <td>2</td>
        
                                            <td >2</td>
                                            
                                        </tr>
                                        <tr>
                                            <th scope="row ">2</th>
                                            <td>2</td>
        
                                            <td >2</td>
                                            
                                        </tr>
                                        
                                </tbody>
                            </table>
                        </section>
        
                    </div>
                    <div class="modal-footer ">

                        <a type="button" class="btn btn-danger" href="about">Hủy bỏ </a>
                    </div>
                </div>
            </div>
        </div>

    </main>


    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js "
        integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p "
        crossorigin="anonymous "></script>

    <script>
        function readMore(){
            $('#myModalReadMore').modal('show');
        }
    </script>
</body>

</html>